{
    "compilerOptions": {
      "jsx": "react",
      "esModuleInterop": true,
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": [
      "src/"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}